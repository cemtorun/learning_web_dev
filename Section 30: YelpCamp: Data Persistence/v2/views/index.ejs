<% include partials/header %>

<div class="container">

	<header class="jumbotron"> 
		<div class="container">
			<h1>
			Welcome to YelpCamp
			</h1>
			<p>
				View our handpicked campgrounds from all over the world!
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground!</a>
			</p>
		</div>
	</header>


	<div class="row text-center" 
		 style="display:flexl flex-wrap: wrap"> <!-- fixes the weird rows with weird number of elements per row -->
		<div class="col-lg-12">
			<h3>
				Our Most Popular Camp Grounds
			</h3>
		</div>

		<% campgrounds_list.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-6"> <!-- automatically goes to 1 per row at xs bc thats the default -->
			<div class="thumbnail"> <!-- puts in nice button like thing -->
				<img src="<%=campground.image %>">
				<div class="caption">
					<h4><%=campground.name %></h4>
				</div>
				<p>
					<a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
				</p>
		
			</div>
		</div>
		<% }); %>
	</div>	
	<% include partials/footer %>
</div>



